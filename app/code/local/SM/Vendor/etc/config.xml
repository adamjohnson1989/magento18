<?xml version="1.0"?>
<config>
    <modules>
        <SM_Vendor>
            <version>0.1.2</version>
        </SM_Vendor>
    </modules>
    <global>
        <models>
            <sm_vendor>
                <class>SM_Vendor_Model</class>
                <resourceModel>vendor_resource</resourceModel>
            </sm_vendor>
            <vendor_resource>
                <class>SM_Vendor_Model_Resource</class>
                <entities>
                    <vendor>
                        <table>sm_vendor</table>
                    </vendor>
                </entities>
            </vendor_resource>
        </models>
        <blocks>
            <sm_vendor>
                <class>SM_Vendor_Block</class>
            </sm_vendor>
        </blocks>
        <helpers>
            <sm_vendor>
                <class>SM_Vendor_Helper</class>
            </sm_vendor>
        </helpers>
        <resources>
            <sm_vendor_setup>
                <setup>
                    <module>SM_Vendor</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
            </sm_vendor_setup>
        </resources>
    </global>
    <frontend>
        <routers>
            <sm_vendor>
                <use>standard</use>
                <args>
                    <module>SM_Vendor</module>
                    <frontName>vendor</frontName>
                </args>
            </sm_vendor>
        </routers>
        <layout>
            <updates>
                <sm_vendor>
                    <file>sm_vendor.xml</file>
                </sm_vendor>
            </updates>
        </layout>
    </frontend>
</config>